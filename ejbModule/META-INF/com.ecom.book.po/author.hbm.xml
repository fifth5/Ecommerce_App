<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
	<hibernate-mapping package="com.ecom.book.po">
		<class name="Author" table="t_author">
			<id name="authorId" column="author_id">
				<generator class="uuid.hex"></generator>
			</id>
			<property name="authorName" column="author_name"></property>
			<property name="nationality" column="nationality"></property>
			<property name="introduction" column="introduction"></property>
			<set name="books" table="t_book_author" lazy="false">
				<key column="author_id"></key>
				<many-to-many class="ProductBook" column="book_id"></many-to-many>
			</set>			
		</class>
	</hibernate-mapping>
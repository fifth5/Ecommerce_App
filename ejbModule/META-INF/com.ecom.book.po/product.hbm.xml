<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.ecom.book.po">
	<class name="Product" table="t_product">
		<id name="productId" column="product_id">
			<generator class="uuid.hex"></generator>
		</id>
		<property name="productNo" column="product_no"></property>
		<property name="productName" column="product_name"></property>
		<property name="introduction" column="introduction"></property>
		<property name="price" column="price"></property>
		<property name="sellPrice" column="sell_price"></property>
		<property name="stock" column="stock"></property>
		<many-to-one name="productInfo" column="book_id" unique="true" cascade="all"></many-to-one>
		<many-to-one name="picture" column="picture_id" unique="true" cascade="all"></many-to-one>
	</class>
</hibernate-mapping>